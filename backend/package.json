{
  "name": "mtg-deck-analyzer-backend",
  "version": "1.0.0",
  "description": "Backend API for MTG Deck Analyzer - Clean Architecture with TypeScript and AWS Lambda",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/interface/index.ts --bundle --outfile=dist/index.js --platform=node --target=node20 --external:@aws-sdk/*",
    "dev": "esbuild src/interface/index.ts --bundle --outfile=dist/index.js --platform=node --target=node20 --external:@aws-sdk/* --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "deploy": "npm run build && sam deploy",
    "local": "sam local start-api",
    "prebuild": "rm -rf dist"
  },
  "keywords": [
    "mtg",
    "magic-the-gathering",
    "deck-analyzer",
    "aws-lambda",
    "typescript",
    "clean-architecture"
  ],
  "author": "MTG Deck Analyzer Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "esbuild": "^0.19.10",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.478.0",
    "@aws-sdk/client-s3": "^3.478.0",
    "@aws-sdk/lib-dynamodb": "^3.478.0",
    "@middy/core": "^4.7.0",
    "@middy/http-cors": "^4.7.0",
    "@middy/http-error-handler": "^4.7.0",
    "@middy/http-json-body-parser": "^4.7.0",
    "@middy/http-response-serializer": "^4.7.0",
    "@middy/input-output-logger": "^4.7.0",
    "@middy/validator": "^4.7.0",
    "joi": "^17.11.0",
    "axios": "^1.6.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
